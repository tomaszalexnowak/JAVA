import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileWriter;
import java.io.IOException;
import java.io.InputStreamReader;

public class szukaj {

	public static void main(String[] args) throws IOException {
		File plik = new File("C:\\test.txt");
		File plik_zapis = new File("C:\\test2.txt");
		FileInputStream strumien = new FileInputStream(plik);
		InputStreamReader podajka = new InputStreamReader(strumien);
		BufferedReader odczyt = new BufferedReader(podajka);
		
		
		String a = "gurwa, moje pole";
		
		BufferedWriter zapisywaczka = new BufferedWriter(new FileWriter(plik_zapis));
		zapisywaczka.write(a);
		zapisywaczka.close();
	}
}
